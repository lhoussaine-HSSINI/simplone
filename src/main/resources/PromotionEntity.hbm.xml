<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="MVC.Model.PromotionEntity" table="promotion" schema="simplone">
        <id name="idPromo">
            <column name="id_promo" sql-type="int(11)"/>
        </id>
        <property name="year">
            <column name="year" sql-type="text"/>
        </property>
    </class>
</hibernate-mapping>