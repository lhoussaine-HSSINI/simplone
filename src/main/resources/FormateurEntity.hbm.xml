<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="MVC.Model.FormateurEntity" table="formateur" schema="simplone">
        <id name="idFormateur">
            <column name="id_formateur" sql-type="int(11)"/>
        </id>
        <property name="nom">
            <column name="nom" sql-type="varchar(255)"/>
        </property>
        <property name="prenom">
            <column name="prenom" sql-type="varchar(255)"/>
        </property>
        <property name="username">
            <column name="username" sql-type="varchar(255)"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(255)"/>
        </property>
    </class>
</hibernate-mapping>