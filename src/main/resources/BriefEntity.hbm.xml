<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="MVC.Model.BriefEntity" table="brief" schema="simplone">
        <id name="idBrief">
            <column name="id_brief" sql-type="int(11)"/>
        </id>
        <property name="titleBrief">
            <column name="title_brief" sql-type="varchar(255)"/>
        </property>
        <property name="descriptionBrief">
            <column name="description_brief" sql-type="text"/>
        </property>
        <property name="deadlineBrief">
            <column name="deadline_brief" sql-type="int(11)"/>
        </property>
        <property name="idClassroom">
            <column name="id_classroom" sql-type="int(11)"/>
        </property>
        <property name="idFormateur">
            <column name="id_formateur" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>